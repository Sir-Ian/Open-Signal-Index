# App
NODE_ENV=production
PORT=8080
TIMEZONE=America/Chicago

# Data sources
SOURCES=bluesky,rss          # comma-sep: bluesky,rss,reddit,gdelt,trends
KEYWORDS="immigration,policy,resources,Chicago"

# Bluesky (pick ONE path)
BLUESKY_APPVIEW_URL=https://public.api.bsky.app    # public search; no key
# or for authed endpoints:
#BLUESKY_HANDLE=you.bsky.social
#BLUESKY_APP_PASSWORD=xxxx-xxxx-xxxx-xxxx           # app password, not account pass

# X/Twitter (paid)
#WITTER_BEARER=YOUR_TWITTER_BEARER_TOKEN

# Reddit (OAuth)
#REDDIT_CLIENT_ID=xxxxxxxxxx
#REDDIT_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxx
#REDDIT_USER_AGENT=yourapp/1.0 by yourreddituser

# Google Trends (optional; no key)
GOOGLE_TRENDS_ENABLED=true

# GDELT (optional; no key)
GDELT_ENABLED=true

# LLM
LLM_PROVIDER=openai
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Storage
DB_URL=file:/data/digest.sqlite                    # or postgres://user:pass@host:5432/db
REDIS_URL=redis://localhost:6379                   # optional

